<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Desafio Sefaz</display-name>
	
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
	
	<servlet-mapping>
	    <servlet-name>Autorizar</servlet-name>
	    <url-pattern>/index</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>Autorizar</servlet-name>
	    <servlet-class>br.com.desafio.sefaz.controller.AutorizacaoController</servlet-class>
	</servlet>
	
	
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.jsp</location>
	</error-page>
	
	<servlet>
		<servlet-name>UsuarioController</servlet-name>
		<servlet-class>br.com.desafio.sefaz.controller.UsuarioController</servlet-class>
	</servlet>
	

	<filter>
		<filter-name>AutorizarUsuario</filter-name>
		<filter-class>br.com.desafio.sefaz.filter.AutorizarUsuario</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AutorizarUsuario</filter-name>
		<url-pattern>/index.jsp</url-pattern>		
		<url-pattern>/usuario/*</url-pattern>
	</filter-mapping>











</web-app>
